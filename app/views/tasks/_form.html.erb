<% if @task.errors.any? %>
  <h3>Please correct these problems:</h3>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="input-append">

<%= form_for @task do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.select :completed, [["Incomplete", false ],["Complete", true ]]%>
  <%= f.label :duedate %>
  <%= f.text_field :duedate, :placeholder => 'DD/MM/YYYY' %>
  <%= f.hidden_field :list_id %>
  <%= f.submit 'Update Item', :class => 'btn btn-success' %>
<% end %>  
</div>
