<h1><%= @task.description %></h1>
<hr>

<p> Duedate: <%= @task.duedate %></p>
<p> Completed: <%= @task.completed %></p>
<br>
<p><%= link_to 'Edit this item', edit_task_path(@task), :class => 'btn btn-warning' %></p>
<p><%= link_to 'Delete this item',
                @task,
                :method => :delete,
                :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %></p>
<p><%= link_to 'Return to list menu', @task.list, :class => 'btn btn-info' %></p>